<!doctype HTML>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="../css/nav.css">
    <link rel="stylesheet" type="text/css" href="../css/userpage.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
<% include nav.ejs %>
<div class="container">
    <div id="profile">
        <div class="row align-items-center justify-content-center">
            <div class="profile-picture">
                <img src="/css/img/profile.jpeg" class="rounded-circle border" width="300" height="300">
            </div>
        </div>
        <div class="row align-items-center justify-content-center">
            <div class="user-type">
                <span class="badge badge-primary">User</span>
            </div>
        </div>
        <div class="row align-items-center justify-content-center">
            <div class="space">
                <ul id="myTab" class="nav nav-pills" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" href="#1a" data-toggle="pill">Profile</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="tab-content">
            <div class="tab-pane active" id="1a" role="tabpanel">
                <div class="profile-info">
                    <div class="row align-items-center justify-content-center">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <th scope="row">First Name:</th>
                                <td><%= firstName %></td>
                            </tr>
                            <tr>
                                <th scope="row">Last Name:</th>
                                <td><%= lastName %></td>
                            </tr>
                            <tr>
                                <th scope="row">University:</th>
                                <td><%= university %></td>
                            </tr>
                            <tr>
                                <th scope="row">Country:</th>
                                <td><%= country %></td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="2a" role="tabpanel">
                <div id="notifications">
                    <div class="row align-items-center justify-content-center">
                        <h3>No new Notifications</h3>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="3a" role="tabpanel">
                <div id="wallet">
                    <div class="row align-items-center justify-content-center">
                        <h3>Nothing here yet</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>